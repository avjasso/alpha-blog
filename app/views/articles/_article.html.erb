<% obj.each do |article| %>
<div class="row mt-3">
	<div class="col-md-8 offset-md-2">
		<div class="card">
			<div class="card-header article-title">
				<%= link_to article.title, article_path(article) %>
			</div>
			<div class="card-body">
				<p class="card-text article-body">
					<%= truncate(article.description, length: 30) %>
					<div class="article-meta-details">
						<small>
							Created by: <%= article.user.username if article.user %>, 
							<%= time_ago_in_words(article.created_at) %> ago, 
							last updated: <%= time_ago_in_words(article.updated_at) %> ago
						</small>
					</div>
				</p>
				<div class="article-actions">
					<%= link_to "Edit this article", edit_article_path(article), class: "btn btn-primary" %>
					<%= link_to "Delete this article", article_path(article), method: :delete, data: { confirm: "Really?" }, class: "btn btn-danger" %>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>