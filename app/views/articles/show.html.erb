
<h2 class="center">Title: <%= @article.title %></h2>

<div class="card col-md-8 offset-md-2 bg-light">
	<div class="card-body">
		<h4 class="center description"><strong>Description:</strong></h4>
		<hr>
		<%= simple_format(@article.description) %>
		<div class="article-actions">
			<%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary" %>
			<%= link_to "Delete this article", article_path(@article), method: :delete, data: { confirm: "Really?" }, class: "btn btn-danger" %>
			<%= link_to "View all articles", articles_path, class: "btn btn-success" %>
		</div>
	</div>
</div>

